# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym j resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        bindsym Control+h resize shrink width 1 px or 1 ppt
        bindsym Control+k resize grow height 1 px or 1 ppt
        bindsym Control+j resize shrink height 1 px or 1 ppt
        bindsym Control+l resize grow width 1 px or 1 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# disable the ugly title bar on windows
new_window pixel 5

# launch applications
bindsym $mod+Control+Return exec "BROWSER=/usr/bin/chromium && chromium"

# mount/unmount drives
bindsym $mod+m exec ~/.i3/mount.sh

# utilities
bindsym $mod+u exec ~/.i3/util.sh

# screenshot
# Deepin can't save to a specify directory when in fullscreen mode (https://github.com/martyr-deepin/deepin-screenshot/issues/32). Using scrot for fullscreen capture.
bindsym --release Print exec scrot 'screenshot_%Y%m%d_%H%M%S.png' -e 'mkdir -p ~/Pictures/screenshots && mv $f ~/Pictures/screenshots && xclip -selection clipboard -t image/png -i ~/Pictures/screenshots/`ls -1 -t ~/Pictures/screenshots | head -1`'
bindsym --release Shift+Print exec deepin-screenshot -s ~/Pictures/screenshots -n
# screen recording
bindsym --release Control+Print exec peek

# Set shut down, restart and locking features
bindsym $mod+0 exec ~/.i3/system.sh

# Lock
bindsym $mod+Control+l exec blurlock

